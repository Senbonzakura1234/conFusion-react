{
	"cSpell.diagnosticLevel": "Hint",
	"cSpell.ignorePaths": ["**/node_modules/**", "**/.yarn/**", "**/.vscode/extensions.json", "yarn.lock", ".env"],
	"cSpell.words": ["clsx", "daisyui", "heroicons", "tailwindcss"],
	"css.lint.unknownAtRules": "ignore",
	"editor.formatOnSave": true,
	"editor.rulers": [120],
	"eslint.alwaysShowStatus": true,
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"eslint.packageManager": "yarn",
	"eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "json", "markdown"],
	"files.associations": {
		"*.eslintrc": "json",
		"*.json": "json",
		"*.prettierrc": "json"
	},
	"markdownlint.ignore": ["LICENSE"],
	"typescript.tsdk": "node_modules\\typescript\\lib"
}
